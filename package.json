{
  "name": "simple-editor-pro",
  "version": "1.1.9",
  "description": "A powerful and customizable rich text editor built with Tiptap",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist",
    "dev": "vite build --watch",
    "prepublishOnly": "npm run build",
    "demo": "cd demo && vite",
    "demo:build": "cd demo && vite build"
  },
  "keywords": [
    "tiptap",
    "editor",
    "rich-text",
    "wysiwyg",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bxyexcellence/simple-editor-pro.git"
  },
  "homepage": "https://github.com/bxyexcellence/simple-editor-pro#readme",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.16",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@tiptap/core": "^3.13.0",
    "@tiptap/extension-highlight": "^3.13.0",
    "@tiptap/extension-horizontal-rule": "^3.13.0",
    "@tiptap/extension-image": "^3.13.0",
    "@tiptap/extension-list": "^3.13.0",
    "@tiptap/extension-mention": "^3.13.0",
    "@tiptap/extension-subscript": "^3.13.0",
    "@tiptap/extension-superscript": "^3.13.0",
    "@tiptap/extension-table": "^3.13.0",
    "@tiptap/extension-table-cell": "^3.13.0",
    "@tiptap/extension-table-header": "^3.13.0",
    "@tiptap/extension-table-row": "^3.13.0",
    "@tiptap/extension-text-align": "^3.13.0",
    "@tiptap/extension-typography": "^3.13.0",
    "@tiptap/extensions": "^3.13.0",
    "@tiptap/markdown": "^3.13.0",
    "@tiptap/pm": "^3.13.0",
    "@tiptap/react": "^3.13.0",
    "@tiptap/starter-kit": "^3.13.0",
    "@tiptap/suggestion": "^3.13.0",
    "html-react-parser": "^5.2.10",
    "lodash.throttle": "^4.1.1",
    "marked": "^17.0.1",
    "react-hotkeys-hook": "^5.2.1"
  },
  "devDependencies": {
    "@types/lodash.throttle": "^4.1.9",
    "@types/marked": "^5.0.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "sass": "^1.69.0",
    "typescript": "^5.2.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.0"
  }
}
